// Build the unit tests for audio_utils

cc_test {
    name: "primitives_tests",

    shared_libs: [
        "liblog",
        "libcutils",
        "libaudioutils",
    ],
    srcs: ["primitives_tests.cpp"],
    cflags: [
        "-Werror",
        "-Wall",
    ],
}

cc_binary {
    name: "fifo_tests",
    host_supported: true,
    srcs: ["fifo_tests.cpp"],
    shared_libs: ["libaudioutils"],
    static_libs: ["libsndfile"],
    cflags: [
        "-Werror",
        "-Wall",
    ],
}

cc_binary_host {
    name: "limiter_tests",
    srcs: ["limiter_tests.c"],
    static_libs: ["libaudioutils"],
    cflags: [
        "-Werror",
        "-Wall",
    ],
}
